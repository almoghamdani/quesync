{
	"name": "quesync",
	"version": "1.0.0",
	"author": "Almog Hamdani",
	"main": "public/electron.js",
	"description": "VoIP Application",
	"homepage": "./",
	"devDependencies": {
		"concurrently": "^5.0.2",
		"cross-env": "^6.0.3",
		"electron": "^9.4.0",
		"electron-builder": "21.2.0",
		"electron-devtools-installer": "^2.2.4",
		"react-scripts": "^3.3.0",
		"redux-logger": "^3.0.6",
		"wait-on": "^3.3.0"
	},
	"dependencies": {
		"animejs": "^3.1.0",
		"chart.js": "^2.9.3",
		"electron-is-dev": "^1.1.0",
		"emoji-regex": "^8.0.0",
		"image-type": "^4.1.0",
		"moment": "^2.24.0",
		"node-sass": "^4.13.0",
		"pretty-bytes": "^5.3.0",
		"query-string": "^6.9.0",
		"react": "^16.12.0",
		"react-chartjs-2": "^2.8.0",
		"react-custom-scrollbars": "^4.2.1",
		"react-dom": "^16.12.0",
		"react-dropzone": "^10.2.1",
		"react-moment": "^0.9.7",
		"react-particles-js": "^2.7.0",
		"react-redux": "^7.1.3",
		"react-transition-group": "^4.3.0",
		"react-twemoji": "^0.2.3",
		"redux": "^4.0.4",
		"redux-persist": "^6.0.0",
		"redux-promise-middleware": "^6.1.2",
		"redux-thunk": "^2.3.0",
		"rmwc": "^5.7.2",
		"zxcvbn": "^4.4.2"
	},
	"scripts": {
		"react-start": "cross-env SASS_PATH=./node_modules react-scripts start",
		"react-build": "cross-env SASS_PATH=./node_modules react-scripts build",
		"dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
		"electron": "electron .",
		"electron-pack": "electron-builder",
		"backend": "cd backend && npm run build && cd ..",
		"prebuild": "npm run backend",
		"build": "npm run react-build && npm run electron-pack"
	},
	"build": {
		"appId": "com.almoghamdani.quesync",
		"productName": "Quesync",
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "../resources"
		},
		"extraFiles": [
			{
				"from": "backend/build/Release",
				"to": "backend"
			},
			{
				"from": "cert.pem",
				"to": "backend/cert.pem"
			}
		],
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"win": {
			"target": [
				"nsis",
				"zip"
			],
			"publisherName": "Almog Hamdani"
		},
		"mac": {
			"target": "dmg",
			"category": "public.app-category.social-networking"
		}
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	]
}
